<%- include('../../partials/header.ejs') %>
    <div class="container my-container my-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card card-body">
                    <h4 class="mb-4">Create new account</h4>
                    <form method="POST" action="/auth/register">
                        <div class="form-group mb-3">
                            <label for="username">Enter your username (Unique)</label>
                            <input type="text" name="username" placeholder="Username*" id="username" class="form-control <%= error.username ? 'is-invalid' : '' %> " value=" <%= value.username ? value.username : '' %> " required />
                            <div class="invalid-feedback">
                                <%= error.username && error.username  %>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label for="email">Enter your valid email</label>
                            <input type="email" name="email" placeholder="E-mail*" id="email" class="form-control <%= error.email ? 'is-invalid' : '' %> " value=" <%= value.email ? value.email : '' %> " required />
                            <div class="invalid-feedback">
                                <%= error.email && error.email  %>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label for="password">Enter strong password</label>
                            <input type="password" name="password" placeholder="Password*" id="password" class="form-control <%= error.password ? 'is-invalid' : '' %> " value=" <%= value.password ? value.password : '' %> " required />
                            <div class="invalid-feedback">
                                <%= error.password && error.password  %>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label for="confirmPassword">Confirm password</label>
                            <input type="password" name="confirmPassword" placeholder="Confirm password*" id="confirmPassword" class="form-control <%= error.confirmPassword ? 'is-invalid' : '' %> " required />
                            <div class="invalid-feedback">
                                <%= error.confirmPassword && error.confirmPassword  %>
                            </div>
                        </div>
                        <input type="submit" value="Resister" class="btn btn-outline-success" />
                    </form>
                    <a href="/auth/login" class="my-3 text-center"> Already have an account? SignIn</a>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer.ejs') %>

        </body>

        </html>